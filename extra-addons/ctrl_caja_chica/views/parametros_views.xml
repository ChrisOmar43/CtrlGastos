<odoo>
    <data>
        <!-- ============================================ -->
        <!-- ============== CONCEPTOS =================== -->
        <!-- ============================================ -->
        
        <!-- Vista Tree Conceptos -->
        <record id="view_ctrl_caja_concepto_tree" model="ir.ui.view">
            <field name="name">ctrl.caja.concepto.tree</field>
            <field name="model">ctrl.caja.concepto</field>
            <field name="arch" type="xml">
                <tree decoration-muted="not activo" sample="1">
                    <field name="name"/>
                    <field name="codigo" optional="show"/>
                    <field name="cantidad_solicitudes"/>
                    <field name="monto_total" sum="Total"/>
                    <field name="activo" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form Conceptos -->
        <record id="view_ctrl_caja_concepto_form" model="ir.ui.view">
            <field name="name">ctrl.caja.concepto.form</field>
            <field name="model">ctrl.caja.concepto</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="activo" widget="boolean_button" 
                               options="{'terminology': {'string_true': 'Activo', 'string_false': 'Inactivo'}}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_solicitudes" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-file-text">
                                <field name="cantidad_solicitudes" widget="statinfo" 
                                       string="Solicitudes"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="name" string="Concepto"/>
                            <h1>
                                <field name="name" placeholder="ej: Papelería, Gasolina, Mantenimiento..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="codigo" placeholder="ej: PAP, GAS, MAN..."/>
                            </group>
                            <group>
                                <field name="monto_total" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="descripcion" placeholder="Descripción detallada del concepto..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista Search Conceptos -->
        <record id="view_ctrl_caja_concepto_search" model="ir.ui.view">
            <field name="name">ctrl.caja.concepto.search</field>
            <field name="model">ctrl.caja.concepto</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="codigo"/>
                    <separator/>
                    <filter string="Activos" name="activos" domain="[('activo', '=', True)]"/>
                    <filter string="Inactivos" name="inactivos" domain="[('activo', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Acción Conceptos -->
        <record id="action_ctrl_caja_concepto" model="ir.actions.act_window">
            <field name="name">Conceptos de Gasto</field>
            <field name="res_model">ctrl.caja.concepto</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_activos': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo concepto de gasto
                </p>
                <p>
                    Define los conceptos que se pueden usar en las solicitudes de compra.
                    Ejemplos: Papelería, Gasolina, Mantenimiento, Limpieza, etc.
                </p>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- ========== CENTROS DE COSTO ================ -->
        <!-- ============================================ -->
        
        <!-- Vista Tree Centros de Costo -->
        <record id="view_ctrl_caja_centro_costo_tree" model="ir.ui.view">
            <field name="name">ctrl.caja.centro.costo.tree</field>
            <field name="model">ctrl.caja.centro.costo</field>
            <field name="arch" type="xml">
                <tree decoration-muted="not activo" sample="1">
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="responsable_id" optional="show"/>
                    <field name="cantidad_solicitudes"/>
                    <field name="monto_total" sum="Total"/>
                    <field name="activo" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form Centros de Costo -->
        <record id="view_ctrl_caja_centro_costo_form" model="ir.ui.view">
            <field name="name">ctrl.caja.centro.costo.form</field>
            <field name="model">ctrl.caja.centro.costo</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="activo" widget="boolean_button" 
                               options="{'terminology': {'string_true': 'Activo', 'string_false': 'Inactivo'}}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_solicitudes" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-building">
                                <field name="cantidad_solicitudes" widget="statinfo" 
                                       string="Solicitudes"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="name" string="Centro de Costo"/>
                            <h1>
                                <field name="name" placeholder="ej: Almacén, Administración, Servicio..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="codigo" placeholder="ej: ALM, ADMIN, SERV..." 
                                       style="text-transform: uppercase;"/>
                                <field name="responsable_id"/>
                            </group>
                            <group>
                                <field name="monto_total" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="descripcion" placeholder="Descripción del centro de costo..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista Search Centros de Costo -->
        <record id="view_ctrl_caja_centro_costo_search" model="ir.ui.view">
            <field name="name">ctrl.caja.centro.costo.search</field>
            <field name="model">ctrl.caja.centro.costo</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="codigo"/>
                    <field name="responsable_id"/>
                    <separator/>
                    <filter string="Activos" name="activos" domain="[('activo', '=', True)]"/>
                    <filter string="Inactivos" name="inactivos" domain="[('activo', '=', False)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Responsable" name="group_by_responsable" 
                                context="{'group_by': 'responsable_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción Centros de Costo -->
        <record id="action_ctrl_caja_centro_costo" model="ir.actions.act_window">
            <field name="name">Centros de Costo</field>
            <field name="res_model">ctrl.caja.centro.costo</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_activos': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo centro de costo
                </p>
                <p>
                    Define los centros de costo de tu empresa.
                    Ejemplos: Almacén, Administración, Servicio, Logística, Planta, etc.
                </p>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- ============== PROVEEDORES ================= -->
        <!-- ============================================ -->
        
        <!-- Vista Tree Proveedores -->
        <record id="view_ctrl_caja_proveedor_tree" model="ir.ui.view">
            <field name="name">ctrl.caja.proveedor.tree</field>
            <field name="model">ctrl.caja.proveedor</field>
            <field name="arch" type="xml">
                <tree decoration-muted="not activo" sample="1">
                    <field name="name"/>
                    <field name="codigo" optional="show"/>
                    <field name="telefono" optional="show"/>
                    <field name="contacto" optional="show"/>
                    <field name="cantidad_solicitudes"/>
                    <field name="monto_total" sum="Total Comprado"/>
                    <field name="activo" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form Proveedores -->
        <record id="view_ctrl_caja_proveedor_form" model="ir.ui.view">
            <field name="name">ctrl.caja.proveedor.form</field>
            <field name="model">ctrl.caja.proveedor</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="activo" widget="boolean_button" 
                               options="{'terminology': {'string_true': 'Activo', 'string_false': 'Inactivo'}}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_solicitudes" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-shopping-cart">
                                <field name="cantidad_solicitudes" widget="statinfo" 
                                       string="Compras"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <label for="name" string="Proveedor"/>
                            <h1>
                                <field name="name" placeholder="Nombre del proveedor..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Información General">
                                <field name="codigo" placeholder="RFC o código..."/>
                                <field name="telefono" placeholder="+52 (xxx) xxx-xxxx"/>
                                <field name="email" widget="email" placeholder="email@proveedor.com"/>
                            </group>
                            <group string="Contacto">
                                <field name="contacto" placeholder="Nombre del contacto..."/>
                                <field name="monto_total" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="direccion" placeholder="Dirección completa..."/>
                        </group>
                        
                        <group>
                            <field name="notas" placeholder="Notas adicionales sobre el proveedor..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vista Search Proveedores -->
        <record id="view_ctrl_caja_proveedor_search" model="ir.ui.view">
            <field name="name">ctrl.caja.proveedor.search</field>
            <field name="model">ctrl.caja.proveedor</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="codigo"/>
                    <field name="telefono"/>
                    <field name="email"/>
                    <separator/>
                    <filter string="Activos" name="activos" domain="[('activo', '=', True)]"/>
                    <filter string="Inactivos" name="inactivos" domain="[('activo', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Acción Proveedores -->
        <record id="action_ctrl_caja_proveedor" model="ir.actions.act_window">
            <field name="name">Proveedores</field>
            <field name="res_model">ctrl.caja.proveedor</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_activos': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Agregar un nuevo proveedor
                </p>
                <p>
                    Registra los proveedores de tu empresa para facilitar
                    la selección en las solicitudes de compra.
                </p>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- ================ MENÚS ===================== -->
        <!-- ============================================ -->
        
        <!-- Menú principal de Configuración -->
        <menuitem id="menu_ctrl_caja_configuracion" 
                  name="Configuración" 
                  parent="menu_ctrl_caja_root" 
                  sequence="90"/>
        
        <!-- Submenú Conceptos -->
        <menuitem id="menu_ctrl_caja_conceptos" 
                  name="Conceptos" 
                  parent="menu_ctrl_caja_configuracion" 
                  action="action_ctrl_caja_concepto" 
                  sequence="10"/>
        
        <!-- Submenú Centros de Costo -->
        <menuitem id="menu_ctrl_caja_centros_costo" 
                  name="Centros de Costo" 
                  parent="menu_ctrl_caja_configuracion" 
                  action="action_ctrl_caja_centro_costo" 
                  sequence="20"/>
        
        <!-- Submenú Proveedores -->
        <menuitem id="menu_ctrl_caja_proveedores" 
                  name="Proveedores" 
                  parent="menu_ctrl_caja_configuracion" 
                  action="action_ctrl_caja_proveedor" 
                  sequence="30"/>

    </data>
</odoo>