<odoo>
    <data>
        <!-- ============ WIZARD DE RECHAZO ============ -->
        <record id="view_solicitud_rechazo_wizard_form" model="ir.ui.view">
            <field name="name">ctrl.caja.solicitud.rechazo.wizard.form</field>
            <field name="model">ctrl.caja.solicitud.rechazo.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="solicitud_id" invisible="1"/>
                        <field name="nivel" invisible="1"/>
                        <field name="comentario" nolabel="1" 
                               placeholder="Explique detalladamente el motivo del rechazo..."/>
                    </group>
                    <footer>
                        <button string="Confirmar Rechazo" 
                                name="action_confirmar_rechazo" 
                                type="object" 
                                class="btn-danger"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- =========== VISTAS NIVEL 1 ================= -->
        <!-- ============================================ -->

        <!-- Vista Tree Nivel 1 -->
        <record id="view_autorizador_nivel1_tree" model="ir.ui.view">
            <field name="name">autorizador.nivel1.tree</field>
            <field name="model">ctrl.caja.solicitud</field>
            <field name="arch" type="xml">
                <tree decoration-warning="True" create="false" delete="false" edit="false">
                    <field name="numero_solicitud"/>
                    <field name="fecha_solicitud"/>
                    <field name="responsable_id" string="Solicitante"/>
                    <field name="categoria_id"/>
                    <field name="concepto_texto" optional="show"/>
                    <field name="monto_estimado" sum="Total a Autorizar"/>
                    <field name="nivel_requerido" widget="badge"/>
                    <field name="metodo_pago" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form Nivel 1 -->
        <record id="view_autorizador_nivel1_form" model="ir.ui.view">
            <field name="name">autorizador.nivel1.form</field>
            <field name="model">ctrl.caja.solicitud</field>
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false">
                    <header>
                        <button name="action_autorizar_nivel1" 
                                string="✓ AUTORIZAR" 
                                type="object" 
                                class="oe_highlight btn-success"
                                confirm="¿Está seguro de autorizar esta solicitud?"/>
                        <button name="action_rechazar_nivel1" 
                                string="✗ RECHAZAR" 
                                type="object" 
                                class="btn-danger"
                                confirm="¿Está seguro de rechazar esta solicitud?"/>
                        <field name="estado" widget="statusbar" 
                               statusbar_visible="autorizacion_nivel1"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <label for="numero_solicitud" string="Solicitud"/>
                            <h1>
                                <field name="numero_solicitud" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Información del Solicitante">
                                <field name="responsable_id" readonly="1"/>
                                <field name="fecha_solicitud" readonly="1"/>
                            </group>
                            
                            <group string="Información Financiera">
                                <field name="monto_estimado" readonly="1" 
                                       class="oe_read_only" 
                                       style="font-size: 1.5em; font-weight: bold;"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="nivel_requerido" readonly="1" widget="badge"/>
                                <field name="metodo_pago" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Concepto Solicitado">
                                <field name="concepto_otro" readonly="1" invisible="1"/>
                                <field name="categoria_id" readonly="1" 
                                       invisible="concepto_otro"
                                       string="Concepto"/>
                                <field name="concepto_texto" readonly="1" 
                                       invisible="not concepto_otro"
                                       string="Concepto (Otros)"/>
                            </group>
                            
                            <group string="Proveedor">
                                <field name="proveedor_otro" readonly="1" invisible="1"/>
                                <field name="proveedor_id" readonly="1" 
                                       invisible="proveedor_otro"/>
                                <field name="proveedor_texto" readonly="1" 
                                       invisible="not proveedor_otro"
                                       string="Proveedor (Otros)"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Descripción / Justificación" name="descripcion">
                                <group>
                                    <field name="descripcion" readonly="1" nolabel="1" 
                                           placeholder="Sin descripción proporcionada"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- =========== VISTAS NIVEL 2 ================= -->
        <!-- ============================================ -->

        <!-- Vista Tree Nivel 2 -->
        <record id="view_autorizador_nivel2_tree" model="ir.ui.view">
            <field name="name">autorizador.nivel2.tree</field>
            <field name="model">ctrl.caja.solicitud</field>
            <field name="arch" type="xml">
                <tree decoration-warning="True" create="false" delete="false" edit="false">
                    <field name="numero_solicitud"/>
                    <field name="fecha_solicitud"/>
                    <field name="responsable_id" string="Solicitante"/>
                    <field name="categoria_id"/>
                    <field name="concepto_texto" optional="show"/>
                    <field name="monto_estimado" sum="Total a Autorizar"/>
                    <field name="nivel_requerido" widget="badge"/>
                    <field name="autorizador_nivel1_id" string="Autorizado N1 por"/>
                    <field name="fecha_autorizacion_nivel1" string="Fecha N1"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form Nivel 2 -->
        <record id="view_autorizador_nivel2_form" model="ir.ui.view">
            <field name="name">autorizador.nivel2.form</field>
            <field name="model">ctrl.caja.solicitud</field>
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false">
                    <header>
                        <button name="action_autorizar_nivel2" 
                                string="✓ AUTORIZAR NIVEL 2" 
                                type="object" 
                                class="oe_highlight btn-success"
                                confirm="¿Está seguro de autorizar esta solicitud en Nivel 2?"/>
                        <button name="action_rechazar_nivel2" 
                                string="✗ RECHAZAR" 
                                type="object" 
                                class="btn-danger"
                                confirm="¿Está seguro de rechazar esta solicitud?"/>
                        <field name="estado" widget="statusbar" 
                               statusbar_visible="autorizacion_nivel1,autorizacion_nivel2"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <label for="numero_solicitud" string="Solicitud"/>
                            <h1>
                                <field name="numero_solicitud" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Información del Solicitante">
                                <field name="responsable_id" readonly="1"/>
                                <field name="fecha_solicitud" readonly="1"/>
                            </group>
                            
                            <group string="Información Financiera">
                                <field name="monto_estimado" readonly="1" 
                                       class="oe_read_only" 
                                       style="font-size: 1.5em; font-weight: bold;"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="nivel_requerido" readonly="1" widget="badge"/>
                                <field name="metodo_pago" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Concepto Solicitado">
                                <field name="concepto_otro" readonly="1" invisible="1"/>
                                <field name="categoria_id" readonly="1" 
                                       invisible="concepto_otro"
                                       string="Concepto"/>
                                <field name="concepto_texto" readonly="1" 
                                       invisible="not concepto_otro"
                                       string="Concepto (Otros)"/>
                            </group>
                            
                            <group string="Proveedor">
                                <field name="proveedor_otro" readonly="1" invisible="1"/>
                                <field name="proveedor_id" readonly="1" 
                                       invisible="proveedor_otro"/>
                                <field name="proveedor_texto" readonly="1" 
                                       invisible="not proveedor_otro"
                                       string="Proveedor (Otros)"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Descripción / Justificación" name="descripcion">
                                <group>
                                    <field name="descripcion" readonly="1" nolabel="1" 
                                           placeholder="Sin descripción proporcionada"/>
                                </group>
                            </page>
                            
                            <page string="Autorización Nivel 1" name="nivel1">
                                <group>
                                    <group string="Autorizado por">
                                        <field name="autorizador_nivel1_id" readonly="1"/>
                                        <field name="fecha_autorizacion_nivel1" readonly="1"/>
                                    </group>
                                    <group string="Comentarios">
                                        <field name="comentario_nivel1" readonly="1" nolabel="1"
                                               placeholder="Sin comentarios"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- =========== VISTAS NIVEL 3 ================= -->
        <!-- ============================================ -->

        <!-- Vista Tree Nivel 3 -->
        <record id="view_autorizador_nivel3_tree" model="ir.ui.view">
            <field name="name">autorizador.nivel3.tree</field>
            <field name="model">ctrl.caja.solicitud</field>
            <field name="arch" type="xml">
                <tree decoration-danger="True" create="false" delete="false" edit="false">
                    <field name="numero_solicitud"/>
                    <field name="fecha_solicitud"/>
                    <field name="responsable_id" string="Solicitante"/>
                    <field name="categoria_id"/>
                    <field name="concepto_texto" optional="show"/>
                    <field name="monto_estimado" sum="Total a Autorizar"/>
                    <field name="nivel_requerido" widget="badge"/>
                    <field name="autorizador_nivel1_id" string="Autorizado N1 por"/>
                    <field name="autorizador_nivel2_id" string="Autorizado N2 por"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form Nivel 3 -->
        <record id="view_autorizador_nivel3_form" model="ir.ui.view">
            <field name="name">autorizador.nivel3.form</field>
            <field name="model">ctrl.caja.solicitud</field>
            <field name="arch" type="xml">
                <form create="false" delete="false" edit="false">
                    <header>
                        <button name="action_autorizar_nivel3" 
                                string="✓ AUTORIZAR NIVEL 3 (FINAL)" 
                                type="object" 
                                class="oe_highlight btn-success"
                                confirm="¿Está seguro de autorizar esta solicitud? Esta es la autorización FINAL."/>
                        <button name="action_rechazar_nivel3" 
                                string="✗ RECHAZAR" 
                                type="object" 
                                class="btn-danger"
                                confirm="¿Está seguro de rechazar esta solicitud?"/>
                        <field name="estado" widget="statusbar" 
                               statusbar_visible="autorizacion_nivel1,autorizacion_nivel2,autorizacion_nivel3"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <label for="numero_solicitud" string="Solicitud"/>
                            <h1>
                                <field name="numero_solicitud" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Información del Solicitante">
                                <field name="responsable_id" readonly="1"/>
                                <field name="fecha_solicitud" readonly="1"/>
                            </group>
                            
                            <group string="Información Financiera">
                                <field name="monto_estimado" readonly="1" 
                                       class="oe_read_only" 
                                       style="font-size: 1.5em; font-weight: bold; color: #d9534f;"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="nivel_requerido" readonly="1" widget="badge"/>
                                <field name="metodo_pago" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Concepto Solicitado">
                                <field name="concepto_otro" readonly="1" invisible="1"/>
                                <field name="categoria_id" readonly="1" 
                                       invisible="concepto_otro"
                                       string="Concepto"/>
                                <field name="concepto_texto" readonly="1" 
                                       invisible="not concepto_otro"
                                       string="Concepto (Otros)"/>
                            </group>
                            
                            <group string="Proveedor">
                                <field name="proveedor_otro" readonly="1" invisible="1"/>
                                <field name="proveedor_id" readonly="1" 
                                       invisible="proveedor_otro"/>
                                <field name="proveedor_texto" readonly="1" 
                                       invisible="not proveedor_otro"
                                       string="Proveedor (Otros)"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Descripción / Justificación" name="descripcion">
                                <group>
                                    <field name="descripcion" readonly="1" nolabel="1" 
                                           placeholder="Sin descripción proporcionada"/>
                                </group>
                            </page>
                            
                            <page string="Autorizaciones Previas" name="autorizaciones_previas">
                                <group>
                                    <group string="Nivel 1">
                                        <field name="autorizador_nivel1_id" readonly="1"/>
                                        <field name="fecha_autorizacion_nivel1" readonly="1"/>
                                        <field name="comentario_nivel1" readonly="1" nolabel="1"
                                               placeholder="Sin comentarios"/>
                                    </group>
                                    <group string="Nivel 2">
                                        <field name="autorizador_nivel2_id" readonly="1"/>
                                        <field name="fecha_autorizacion_nivel2" readonly="1"/>
                                        <field name="comentario_nivel2" readonly="1" nolabel="1"
                                               placeholder="Sin comentarios"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ============================================ -->
        <!-- ============== ACCIONES ==================== -->
        <!-- ============================================ -->

        <!-- Acción Nivel 1 -->
        <record id="action_autorizador_nivel1" model="ir.actions.act_window">
            <field name="name">Autorizar Nivel 1</field>
            <field name="res_model">ctrl.caja.solicitud</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('estado', '=', 'autorizacion_nivel1')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_autorizador_nivel1_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_autorizador_nivel1_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay solicitudes pendientes de autorización
                </p>
            </field>
        </record>

        <!-- Acción Nivel 2 -->
        <record id="action_autorizador_nivel2" model="ir.actions.act_window">
            <field name="name">Autorizar Nivel 2</field>
            <field name="res_model">ctrl.caja.solicitud</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('estado', '=', 'autorizacion_nivel2')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_autorizador_nivel2_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_autorizador_nivel2_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay solicitudes pendientes de autorización
                </p>
            </field>
        </record>

        <!-- Acción Nivel 3 -->
        <record id="action_autorizador_nivel3" model="ir.actions.act_window">
            <field name="name">Autorizar Nivel 3</field>
            <field name="res_model">ctrl.caja.solicitud</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('estado', '=', 'autorizacion_nivel3')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_autorizador_nivel3_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_autorizador_nivel3_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay solicitudes pendientes de autorización
                </p>
            </field>
        </record>

        <!-- ============ MENÚS ============ -->
        <menuitem id="menu_ctrl_caja_autorizaciones" 
                  name="Autorizaciones" 
                  parent="menu_ctrl_caja_root" 
                  sequence="10"/>
        
        <!-- Solo autorizadores N1 ven este menú -->
        <menuitem id="menu_autorizador_nivel1" 
                name="Nivel 1 (&lt; $1,000)" 
                parent="menu_ctrl_caja_autorizaciones" 
                action="action_autorizador_nivel1" 
                groups="group_caja_autorizador_nivel1,group_caja_admin"
                sequence="10"/>

        <!-- Solo autorizadores N2 ven este menú -->
        <menuitem id="menu_autorizador_nivel2" 
                name="Nivel 2 ($1,000 - $2,000)" 
                parent="menu_ctrl_caja_autorizaciones" 
                action="action_autorizador_nivel2" 
                groups="group_caja_autorizador_nivel2,group_caja_admin"
                sequence="20"/>

        <!-- Solo autorizadores N3 ven este menú -->
        <menuitem id="menu_autorizador_nivel3" 
                name="Nivel 3 (&gt; $2,000)" 
                parent="menu_ctrl_caja_autorizaciones" 
                action="action_autorizador_nivel3" 
                groups="group_caja_autorizador_nivel3,group_caja_admin"
                sequence="30"/>

    </data>
</odoo>